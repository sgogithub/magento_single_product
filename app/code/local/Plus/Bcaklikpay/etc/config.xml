<?xml version="1.0"?>
<config>
  <modules>
    <Plus_Bcaklikpay>
      <version>1.0.0.0</version>
    </Plus_Bcaklikpay>
  </modules>
 
  <global>
    <fieldsets>
      <sales_convert_quote_payment>
        <custom_field_one>
          <to_order_payment>*</to_order_payment>
        </custom_field_one>
        <custom_field_two>
          <to_order_payment>*</to_order_payment>
        </custom_field_two>
      </sales_convert_quote_payment>
    </fieldsets>
     
    <helpers>
      <bcaklikpay>
        <class>Plus_Bcaklikpay_Helper</class>
      </bcaklikpay>
    </helpers>
 
    <blocks>
      <bcaklikpay>
        <class>Plus_Bcaklikpay_Block</class>
      </bcaklikpay>
    </blocks>
         
    <models>
      <bcaklikpay>
        <class>Plus_Bcaklikpay_Model</class>
      </bcaklikpay>
    </models>
 
    <resources>
      <bcaklikpay_setup>
        <setup>
          <module>Plus_Bcaklikpay</module>
        </setup>
      </bcaklikpay_setup>
    </resources>
  </global>
 
  <default>
    <payment>
      <bcaklikpay>
        <active>1</active>
        <model>bcaklikpay/paymentmethod</model>
        <order_status>pending</order_status>
        <title>Bca Klik Pay</title>
        <allowspecific>0</allowspecific>
        <payment_action>sale</payment_action>
      </bcaklikpay>
    </payment>
  </default>
   
  <frontend>
    <routers>
      <bcaklikpay>
        <use>standard</use>
        <args>
          <module>Plus_Bcaklikpay</module>
          <frontName>bcaklikpay</frontName>
        </args>
      </bcaklikpay>
    </routers>
  </frontend>
</config>